{
  "name": "Mercado Blue",
  "version": "0.0.1",
  "description": "Autom√°ticamente convierte los precios de Mercado Libre a su valor en Dolar Libre (Blue)",
  "manifest_version": 3,
  "author": "Max",
  "content_scripts": [
    {
      "matches": [
        "https://*.mercadolibre.com.ar/*"
      ],
      "exclude_matches": [],
      "run_at": "document_idle",
      "js": [
        "js/onStart.js",
        "js/blue.js"
      ],
      "css": [
        "css/styles.css"
      ]
    }
  ],
  "permissions": [
    "storage"
  ],
  "icons": {
    "16": "imgs/icons/ico-16.png",
    "32": "imgs/icons/ico-32.png",
    "48": "imgs/icons/ico-48.png",
    "128": "imgs/icons/ico-128.png"
  }
}